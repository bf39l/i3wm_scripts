# bind key for enabling/disabling touchpad
bindsym Ctrl+$mod+F4 exec synclient TouchpadOff=$(sh $HOME/.config/i3_scripts/touchpad.sh)

# bind key code for camera
# find key map: xmodmap -pk | grep Cam
#bindsym XF86WebCam exec arandr

# Mic key pressed: Use 'setkeycodes e071 <keycode>' to make it known.
# tail -f /var/log/kern.log
# Monitor rotate key pressed: setkeycodes e072 <keycode>
# 198    	0x1008ffb2 (XF86AudioMicMute)
# keycode returned from "xev" is different from "showkey"  offset is 8
# showkey = 198 => xev = 206
# The reason is X11 protocol defines a keycode as a 8-bit value in the range [8,255]
bindcode 206 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && $HOME/.config/i3_scripts/mic.sh

# monitor rotate
# setkeycodes e072 <keycode> => 211
bindcode 219 exec $HOME/.config/i3_scripts/rotate_screen.sh

# Print key pressed
bindsym --release Print exec scrot ~/Pictures/screenshots/Screenshot_%Y-%b-%d_%H-%M-%S.png -e 'viewnior $f'
bindsym --release Shift+Print exec scrot -sf ~/Pictures/screenshots/Screenshot_%Y-%b-%d_%H-%M-%S.png -e 'viewnior $f'

